<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t("static_content.new_ad"), new_object_url, :icon => 'icon-plus', :id => 'admin_new_ad' %></li>
<% end %>

<% content_for :page_title do %>
   <%= Spree.t("static_content.ads") %>
<% end %>

<% if @ads.any? %>
<table class="index responsive" id="listing_ads" data-hook>
  <colgroup>
    <col style="width: 40%">
    <col style="width: 35%">
    <col style="width: 10%">
    <col style="width: 15%">
  </colgroup>
  <thead>
    <tr data-hook="admin_ads_index_headers">
      <th><%= Spree::Ad.human_attribute_name(:title) %></th>
      <th><%= Spree::Ad.human_attribute_name(:image) %></th>
      <th><%= Spree.t("static_content.link") %></th>
      <th data-hook="admin_ads_index_header_actions" class="actions"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr data-hook="admin_ads_index_rows" class="<%= cycle('odd', 'even') %>" id="<%= dom_id ad %>">
        <td>
          <%= ad.title %>
        </td>
        <td>
          <%= image_tag ad.image.url(:mini) %>
        </td>
        <td>
          <%= link_to ad.link, ad.link, :target => '_blank' %>
        </td>
        <td class="actions" data-hook="admin_ads_index_row_actions">
          <%= link_to_edit ad, :no_text => true %>
          <%= link_to_delete ad, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: I18n.t(:other, scope: 'activerecord.models.spree/ad')) %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_ad_path %>!
  </div>
<% end %>
