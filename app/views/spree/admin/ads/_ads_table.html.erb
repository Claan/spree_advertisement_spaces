<table class="index responsive" id="listing_ads" data-hook>
  <colgroup>
    <col style="width: 5%">
    <col style="width: 5%">
    <col style="width: 40%">
    <col style="width: 10%">
    <col style="width: 25%">
    <col style="width: 15%">
  </colgroup>
  <thead>
    <tr data-hook="admin_ads_index_headers">
      <th><%= Spree::Ad.human_attribute_name(:position) %></th>
      <th><%= Spree::Ad.human_attribute_name(:size) %></th>
      <th><%= Spree::Ad.human_attribute_name(:title) %></th>
      <th><%= Spree::Ad.human_attribute_name(:image) %></th>
      <th><%= Spree.t("static_content.link") %></th>
      <th data-hook="admin_ads_index_header_actions" class="actions"></th>
    </tr>
  </thead>

  <tbody>
    <% ads.each do |ad| %>
      <tr data-hook="admin_ads_index_rows" class="<%= cycle('odd', 'even') %>" id="<%= dom_id ad %>">
        <td>
          <%= ad.position %>
        </td>
        <td>
          <%= ad.size %>
        </td>
        <td>
          <%= ad.title %>
        </td>
        <td>
          <%= image_tag ad.image.url(:mini) %>
        </td>
        <td>
          <%= link_to ad.link, ad.link, :target => '_blank' %>
        </td>
        <td class="actions" data-hook="admin_ads_index_row_actions">
          <%= link_to_edit ad, :no_text => true %>
          <%= link_to_delete ad, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
